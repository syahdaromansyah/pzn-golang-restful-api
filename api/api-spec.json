{
  "openapi": "3.1.1",
  "info": {
    "title": "Category Service - RESTful API",
    "description": "API specification for RESTful API of category service",
    "version": "1.2.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/categories": {
      "get": {
        "tags": [
          "Category Endpoint"
        ],
        "description": "Get all categories",
        "summary": "Get all categories",
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all categories",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseCategories"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Category Endpoint"
        ],
        "description": "Create a new category",
        "summary": "Create a new category",
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateCategory"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success create a category",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseCategory"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          }
        }
      }
    },
    "/categories/{categoryId}": {
      "get": {
        "tags": [
          "Category Endpoint"
        ],
        "description": "Get a category by id",
        "summary": "Get a category by id",
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "parameters": [
          {
            "name": "categoryId",
            "description": "Category Id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get a category by id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseCategory"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          },
          "404": {
            "description": "Category is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Category Endpoint"
        ],
        "description": "Update a category by id",
        "summary": "Update a category by id",
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "parameters": [
          {
            "name": "categoryId",
            "description": "Category Id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateCategory"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update a category by id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseCategory"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          },
          "404": {
            "description": "Category is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Category Endpoint"
        ],
        "description": "Delete a category by id",
        "summary": "Delete a category by id",
        "security": [
          {
            "CategoryAuth": []
          }
        ],
        "parameters": [
          {
            "name": "categoryId",
            "description": "Category Id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success delete a category by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          },
          "404": {
            "description": "Category is not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WebResponseClientError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "CategoryAuth": {
        "name": "X-API-Key",
        "type": "apiKey",
        "in": "header",
        "description": "Authentication for Category Endpoint"
      }
    },
    "schemas": {
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "WebResponseCategory": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "status": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/Category"
          }
        }
      },
      "WebResponseCategories": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "status": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Category"
            }
          }
        }
      },
      "WebResponseClientError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "status": {
            "type": "string"
          },
          "data": {
            "type": "string"
          }
        }
      },
      "WebResponseServerError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "status": {
            "type": "string"
          },
          "data": {
            "type": "object"
          }
        }
      },
      "CreateOrUpdateCategory": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 128
          }
        }
      }
    }
  }
}